<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="3">


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/task_list_text_size"
        android:id="@+id/txtTodoTitle"
        android:paddingRight="@dimen/task_list_text_padding"
        android:paddingTop="@dimen/task_list_text_padding"
        android:paddingBottom="@dimen/task_list_text_padding"
        android:layout_weight="2" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/task_list_text_size"
        android:id="@+id/txtTodoDueDate"
        android:paddingLeft="@dimen/task_list_text_padding"
        android:paddingTop="@dimen/task_list_text_padding"
        android:paddingBottom="@dimen/task_list_text_padding"
        android:layout_weight="1" />

</LinearLayout>